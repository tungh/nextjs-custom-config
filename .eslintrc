{
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "rules": {
    "semi": 2,
    "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }],
    "import/no-extraneous-dependencies": ["error", {
      "devDependencies": true
    }]
  },
  "plugins": [
    "jsx-a11y",
    "react"
  ],
  "extends": [
    "plugin:jsx-a11y/recommended",
    "airbnb"
  ]
}
